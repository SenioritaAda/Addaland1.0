package learningJava;

public class Warrior extends CharacterBluePrint{

        @Override
        public void setStrikesFromAfar(boolean strikesFromAfar) {
            strikesFromAfar = false;
        }

        public Warrior(int health, String name) {
            super(health, 40, 20, 0, name, "Warrior");
        }

        public void printStatistics(){
            System.out.println(name + " is a Warrior.");
            System.out.println("Your character's health is " + health + ".");
            System.out.println("Your character's strength is " + strength + ".");
            System.out.println("Your character's speed is " + speed + ".");
        }
        public void fighting(){
            if(health<10){
                System.out.println("You are too wounded to fight, my lord.");
            }else {
                if (strikesFromAfar) {
                    attack();
                }
                block(monstersLevel);
                attack();

            }
        }

}
